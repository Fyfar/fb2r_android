<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.knure.fb2reader" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ua.knure.fb2reader.Views.BookPageView"
            android:label="@string/app_name" />
        <activity
            android:name="ua.knure.fb2reader.Views.MainFragmentPageView"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="ua.knure.fb2reader.Views.GetBookSettingsActivity"
            android:label="@string/title_activity_get_book_settings" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
